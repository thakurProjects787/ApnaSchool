<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_each_user_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.projects.thakur.apnaschool.DailyStatus.AdminOverallMDMStatusActivity"
    tools:showIn="@layout/activity_admin_overall_mdmstatus">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Information card -->
            <android.support.v7.widget.CardView
                android:id="@+id/mdm_information_card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="9dp"
                android:elevation="10dp"
                card_view:cardBackgroundColor="@color/accent"
                card_view:cardCornerRadius="5dp">

                <!-- Header Layout -->
                <LinearLayout
                    android:id="@+id/schoolsinfo_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtv_admin_daily_schools_mdm_infor_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Today MDM Status :"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"
                            android:textStyle="normal|bold" />


                    </LinearLayout>

                    <!-- date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtv_admin_daily_mdm_header_infor_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Date :"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/txtv_admin_daily_mdm_infor_date_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.0"
                            android:fontFamily="sans-serif-condensed"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/primary_darker"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                    </LinearLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <!-- schools card -->
            <android.support.v7.widget.CardView
                android:id="@+id/schools_card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="9dp"
                android:elevation="10dp"
                card_view:cardBackgroundColor="@color/accent"
                card_view:cardCornerRadius="5dp">

                <!-- Header Layout -->
                <LinearLayout
                    android:id="@+id/schoolsinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtv_admin_daily_schools_attn_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text="School's "
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"
                            android:textStyle="normal|bold" />


                    </LinearLayout>

                    <!-- total schools -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtv_admin_daily_attn_tot_schools_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Registered :"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/txtv_admin_daily_attn_tot_schools_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.0"
                            android:fontFamily="sans-serif-condensed"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/primary_darker"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                    </LinearLayout>

                    <!-- student schools -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtv_admin_daily_attn_tot_schools_present_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Submitted :"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/txtv_admin_daily_attn_tot_schools_present_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.0"
                            android:fontFamily="sans-serif-condensed"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                    </LinearLayout>

                    <!-- student schools -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtv_admin_daily_attn_tot_schools_pending_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Pending :"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/txtv_admin_daily_attn_tot_schools_pending_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.0"
                            android:fontFamily="sans-serif-condensed"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/btn_logut_bg"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                    </LinearLayout>




                </LinearLayout>


            </android.support.v7.widget.CardView>

            <!-- mdm students card -->
            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="9dp"
                android:elevation="10dp"
                card_view:cardBackgroundColor="@color/accent"
                card_view:cardCornerRadius="5dp">

                <!-- Header Layout -->
                <LinearLayout
                    android:id="@+id/studentinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtv_mdm_daily_attn_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text="MDM Student's Attendence "
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"
                            android:textStyle="normal|bold" />


                    </LinearLayout>

                    <!-- total student -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtv_admin_daily_mdm_tot_student_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Total  :"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/txtv_admin_daily_mdm_tot_student_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.0"
                            android:fontFamily="sans-serif-condensed"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/primary_darker"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                    </LinearLayout>

                    <!-- student present -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtv_admin_daily_mdm_tot_student_present_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Present :"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/txtv_admin_daily_attn_mdm_student_present_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.0"
                            android:fontFamily="sans-serif-condensed"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                    </LinearLayout>

                    <!-- student absent -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtv_admin_daily_attn_mdm_student_absent_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Absent :"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/txtv_admin_daily_attn_mdm_student_absent_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.0"
                            android:fontFamily="sans-serif-condensed"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/btn_logut_bg"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                    </LinearLayout>




                </LinearLayout>


            </android.support.v7.widget.CardView>

            <!-- Rice details card -->
            <android.support.v7.widget.CardView
                android:id="@+id/mdm_rice_card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="9dp"
                android:elevation="10dp"
                card_view:cardBackgroundColor="@color/accent"
                card_view:cardCornerRadius="5dp">

                <!-- Header Layout -->
                <LinearLayout
                    android:id="@+id/mdmriceinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtv_admin_daily_mdm_rice_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text="RICE Quantity "
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"
                            android:textStyle="normal|bold" />


                    </LinearLayout>

                    <!-- total rice amount used -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtv_admin_daily_tot_mdm_rice_used_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Cooked :"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/txtv_admin_daily_tot_mdm_rice_used_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.0"
                            android:fontFamily="sans-serif-condensed"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/primary_darker"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                    </LinearLayout>

                    <!-- total rice amount left -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtv_admin_daily_tot_mdm_rice_stock_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Stock :"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/txtv_admin_daily_tot_mdm_rice_stock_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.0"
                            android:fontFamily="sans-serif-condensed"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                    </LinearLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>



        </LinearLayout>
    </ScrollView>


</RelativeLayout>
